<%- include('partials/head', {title: 'listado' , styles: ['style-index']}) %>

    <body>
        <%- include('partials/header') %>
            <main>
                <div class="container products-wrapper">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="products-title">Todos los productos</h2>
                        </div>
            
                        <% products.forEach((product) => { %>
                            <div class="col-12 col-sm-6 col-lg-3">
                                <section class="product-box">
                                        <figure class="product-box_image">
                                            <img src="/images/funkos/<%= product.image %>" alt="imagen de producto">
                                        </figure>
                                        <article class="product-box_data">
                                            <h2><%= product.price %></h2>
                                            <p><%= product.name %></p>
                                            <i class="fas fa-truck"></i>
                                            <a href="/products/<%= product.id %>"><button class="btn-add">DETALLE</button></a>
                                        </article>
                                    </a>
                                </section>
                            </div>
                        <% }) %>
            
                    </div>
                </div>
            </main>
            <%- include('partials/footer') %>
    </body>

    </html>