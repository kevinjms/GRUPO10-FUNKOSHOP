<%- include('partials/head', {title: 'Log In', styles: ['login']}) %>
<body>
    <%- include('partials/header') %>
<main>
    <form action="/formulario-de-login" method="POST">
        <label class="login-formulario">
            <div class="login-div">
        <h1> INICIAR SESIÓN </h1>
        <h2 class="login-h2"> INGRESE SU CORREO ELECTRÓNICO </h2>
        <input class="login-input" type="email" name="email" placeholder="CORREO ELECTRONICO" required>
