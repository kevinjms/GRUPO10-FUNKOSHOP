        <input class="login-input" type="password" name="contraseña" placeholder="CONTRASEÑA" required> <i class="fa-solid fa-eye"> </i> 
        <p class="login-p-1"> <a href=""> ¿OLVIDASTE TU CONTRASEÑA? </a> </p>
        <p class="login-p-2"> <input class="login-input-2" type="checkbox"> RECORDARME </p>
        <p class="login-button"> <button type="submit"> ACCEDER </button> </p>
        <p class="login-p-3"> <a href="/register"> CREAR CUENTA </a> </p>
            </div>
    </label>
    </form>
</main>

<%- include('partials/footer') %>
</body>
</html>