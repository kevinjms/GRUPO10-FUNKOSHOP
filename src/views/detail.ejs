<%- include('partials/head', {title: 'Productos' , styles: ['detalle', 'style-index' ]}) %>

    <body>
        <%- include('partials/header') %>
            <main>

                <section class="detalle">
                    <div class="cajadelproducto">
                        <div class="fotoPrincipal">
                            <div class="titulo">
                                <div>
                                    <p>Funko pop</p>
                                </div>
                                <div>
                                    <h4>
                                        <%= product.name %>
                                    </h4>
                                </div>
                            </div>
                            <div class="cj-img">
                                <button class="compartir"> <i class="fa-sharp fa-solid fa-share-nodes"></i></button>
                                <img src="/images/funkos/<%= product.images[0]?product.images[0].url:'default.jpg' %>" alt="logo">
                            </div>
                        </div>
                        <div class="fotosSiguientes">
                            <img class="imgP" src="/images/funkos/<%= product.images[0]?product.images[0].url:'default.jpg' %>" alt="logo">
                            <img class="imgP" src="/images/funkos/<%= product.images[0]?product.images[0].url:'default.jpg' %>" alt="logo">
                        </div>
                    </div>

                    <div class="especificaciones">
                        <button class="favoritos"><i class="fa-regular fa-heart"></i></button>
                        <div class="carrito">
                            <button class="boton-carrito">
                                <li class="fa-solid fa-cart-shopping"></li>
                            </button>
                        </div>
                        <h2>
                            <%= product.price %>
                        </h2>
                        <p>Disponibles: 5</p>

                        <details>
                            <sumary>
                                <%= product.description %>
                            </sumary>
                        </details>
                        <div class="linkInfo">
                            <li><a href="#">Medios de pago</a></li>
                            <li><a href="#">Envíos</a></li>
                            <li><a href="#">Términos y condiciones</a></li>
                            <br>
                            <button><a class="boton-editar"
                                    href="/products/editProducts/<%= product.id %>">Editar</a></button>
                        </div>
                    </div>
                </section>
                <section class="ofertas">
                    <h2>OFERTAS</h2>

                    <article class="contenedorOfertas">
                        <% inSale.forEach((product)=> { %>
                            <div class="infoOfertas">
                                <img src="/images/funkos/<%= product.images[0]?product.images[0].url:'default.jpg' %>" alt="C3">
                                <h4>
                                    <%= product.name %>
                                </h4>
                                <h4>$ <%= product.price %>
                                </h4>
                                <button class="btn-add"><a class='button-detalle-de-producto'
                                        href="/products/detail/<%= product.id %>">DETALLE</a></button>
                                <button class="btn-add agg">Agregar al carrito</button>
                            </div>
                            <% }) %>
                    </article>
                </section>

            </main>
            <%- include('partials/footer') %>
    </body>

    </html>