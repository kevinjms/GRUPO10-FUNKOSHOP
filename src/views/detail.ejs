<%- include('partials/head', {title: 'Productos' , styles: ['detalle']}) %>

    <body>
        <%- include('partials/header') %>
            <main>

                <section class="detalle">
                    <div class="cajadelproducto">
                        <div class="fotoPrincipal">
                            <div class="titulo">
                                <div>
                                    <p>Funko pop</p>
                                </div>
                                <div>
                                    <h4><%= product.name %></h4>
                                </div>
                            </div>
                            <div class="cj-img">
                                <button class="favorito"><i class="fa-regular fa-heart"></i></button>
                                <button class="compartir"> <i class="fa-sharp fa-solid fa-share-nodes"></i></button>
                                <img src="/images/funkos/<%= product.image %>" alt="logo">
                            </div>
                        </div>
                        <div class="fotosSiguientes">
                            <img class="imgP" src="/images/funkos/<%= product.image %>" alt="logo">
                            <img class="imgP" src="/images/funkos/<%= product.image %>" alt="logo">
                        </div>
                    </div>

                    <div class="especificaciones">
                        <div class="carrito">
                            <button class="btn-add"><i class="fa-solid fa-cart-shopping"></i></button>
                        </div>
                        <h2>$ <%= product.price %></h2>
                        <p>Disponibles: 5</p>

                        <details>
                            <sumary>
                                <%= product.description %>
                            </sumary>
                        </details>
                        <div class="linkInfo">
                            <li><a href="#">Medios de pago</a></li>
                            <li><a href="#">Envíos</a></li>
                            <li><a href="#">Términos y condiciones</a></li>
                        </div>
                    </div>
                </section>
                <section class="relacionados">
                    <h2>RELACIONADOS</h2>
                    <article class="infodestacados">
                        <div class="infofunko">
                            <img src="/images/funkos/<%= product.image %>" alt="logo">
                            <h4>Gollum </h4>
                            <p>$10.500</p>
                            <button class="btn-add">AGREGAR</button>
                        </div>
                        <div class="infofunko">
                            <img src="/images/funkos/<%= product.image %>" alt="logo">
                            <h4>Harley Quinn Suicide Squad</h4>
                            <p>$10.500</p>
                            <button class="btn-add">AGREGAR</button>
                        </div>
                        <div class="infofunko">
                            <img src="/images/funkos/<%= product.image %>" alt="logo">
                            <h4>Darth Vader</h4>
                            <p>$10.500</p>
                            <button class="btn-add">AGREGAR</button>
                        </div>
                        <div class="infofunko">
                            <img src="/images/funkos/<%= product.image %>" alt="logo">
                            <h4>RoboCop</h4>
                            <p>$10.500</p>
                            <button class="btn-add">AGREGAR</button>
                        </div>
                    </article>
                </section>
            </main>
            <%- include('partials/footer') %>
    </body>

    </html>