<%- include('partials/head', {title: 'Home' , styles: ['style-index']}) %>

    <body>
        <%- include('partials/header') %>
            <main>
                <div class="container-main">
                    <div class="cabezas">
                        <img src="/images/marcas/funko-cabezagris-breaking-bad.png" alt="breakingBad">
                        <img src="/images/marcas/funko-cabezagris-DC.png" alt="DC">
                        <img src="/images/marcas/funko-cabezagris-MARVEL.png" alt="Marvel">
                        <img src="/images/marcas/funko-cabezagris-starwars.png" alt="SW">
                    </div>
                    <div class="search-container">
                        <input type="text" placeholder="Funko de...">
                        <button><i class="fas fa-search"></i></button>
                    </div>
                    <section class="destacados">
                        <h2>DESTACADOS</h2>
                        <% visited.forEach((product) => { %>
                        <article class="contenedorDestacados">
                            <div class="infoDestacado">
                                <img src="/images/funkos/<%= product.image %>" alt="ST">
                                <h4><%= product.name %></h4>
                                <button class="btn-add"><a class= 'button-detalle-de-producto' href="/products/detail/29">DETALLE</a></button>
                            </div>
                            <% }) %>
                        </article>
                    </section>
                    <section class="ofertas">
                        <h2>OFERTAS</h2>
                        <% inSale.forEach((product) => { %>
                        <article class="contenedorOfertas">
                            <div class="infoOfertas">
                                <img src="/images/funkos/<%= product.image %>" alt="C3">
                                <h4><%= product.name %></h4>
                                <button class="btn-add"><a class= 'button-detalle-de-producto' href="/products/detail/3">DETALLE</a></button>
                            </div>
                            <% }) %>
                        </article>
                    </section>
                    <div class="preventa">
                        <h2>PRE-VENTA</h2>
                        <button class="botonPreventa"><i class="fa-solid fa-circle-info"></i>MAS INFO</button>
                    </div>
                </div>
            </main>
            <%- include('partials/footer') %>
    </body>

    </html>