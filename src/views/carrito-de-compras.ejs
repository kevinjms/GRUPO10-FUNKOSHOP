<%- include('partials/head', {title: 'Carritos de Compras' , styles: ['style-carrito', 'style-index' ]}) %>

    <body>
        <%- include('partials/header') %>
            <main>
                <div class="funko-caja">
                    <div class="car-fav">
                        <h2 id="titulo-carrito">CARRITO(1)</h2>
                        <h2 class="favoritos">FAVORITOS(0)</h2>
                        <div class="descripciones">
                            <h2 class="descripcion">CANT</h2>
                            <h2 class="descripcion2">PRECIO</h2>
                        </div>
                    </div>
                    <article class="box-car">
                        <div class="funko-carrito">
                            <img class="imagen-capitan" src="../images/funkos/funko_capitan_america.png" alt="imagen">
                            <div class="articulos">
                                <p class="capitan-america">CAPITÁN AMÉRICA</p>
                                <p class="login-button"><button class="btn-add"><a href="/products/detail">DETALLE</a></button></p>
                            </div>
                        </div>
                    </article>
                    <div class="precios">
                        <div class="botones1"><button class="btn" type="button" id="menos">-</button>
                            <input id="cantidad" type="text" value="1">
                            <button class="btn" type="button" id="mas">+</button>
                        </div>
                        <p id="precio" class="precio">$10.500</p>
                    <h2>ENVÍO</h2>
                    <P class="precio precio2">$800</P>
                    <div class="total-carrito">
                        <h2>TOTAL</h2>
                        <p id="total" class="precio1">$11.300</p>
                        </div>
                    </div>
                </div>
                </div>
            </main>
            <%- include('partials/footer') %>
            <script src="/js/btn.js"></script>
    </body>
